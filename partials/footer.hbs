
{{> newsletter}}
<footer class="pt-20">
    
    <div class="mx-auto w-full max-w-screen-xl px-4 py-6 lg:py-8">
        <div class="grid grid-cols-1 md:grid-cols-4 gap-8">
            <div class="mb-6 md:mb-0 flex justify-center md:justify-start">
                <a href="https://geekbits.io/" class="flex items-center">
                    <img src="{{img_url @site.logo size="s"}}" class="h-8 me-3" alt="{{@site.title}}" />
                </a>
            </div>
            <div>
                <h2 class="mb-6 text-sm font-semibold text-gray-900 uppercase dark:text-white">Resources</h2>
                <ul class="text-gray-500 dark:text-gray-400 font-medium">
                    {{#foreach navigation}}
                      <li class="mb-4">
                          <a href="{{url}}" class="hover:underline">{{label}}</a>
                      </li>
                      {{/foreach}}
                </ul>
            </div>
            <div>
                <h2 class="mb-6 text-sm font-semibold text-gray-900 uppercase dark:text-white">Ghost Navigation</h2>
                <ul class="text-gray-500 dark:text-gray-400 font-medium">
                    {{#foreach @site.secondary_navigation}}
                      <li class="mb-4">
                          <a href="{{url}}" class="hover:underline">{{label}}</a>
                      </li>
                      {{/foreach}}
                </ul>
            </div>
            <div>
                <h2 class="mb-6 text-sm font-semibold text-gray-900 uppercase dark:text-white">Tags</h2>
                <ul class="text-gray-500 dark:text-gray-400 font-medium">
                    {{#foreach tags limit="4"}}
                      <li class="mb-4">
                           <a href="{{url}}" title="{{name}}" class="tag tag-{{id}} {{slug}}">{{name}}</a>
                      </li>
                      {{/foreach}}
                </ul>
            </div>
        </div>
        <hr class="my-6 border-gray-200 sm:mx-auto dark:border-gray-700 lg:my-8" />
        <div class="grid grid-cols-1 sm:grid-cols-2 justify-between items-center">
            <span>&copy;{{date format="YYYY"}}&nbsp;{{#link href=@site.url}}{{@site.title}}{{/link}}.</span>
            <div class="flex justify-center sm:justify-end mt-4 sm:mt-0">
                <div class="flex mt-4 sm:justify-center sm:mt-0">
            <div class="sm:flex sm:items-center sm:justify-between">          
          <div class="flex mt-4 sm:justify-center sm:mt-0">
              <a href="{{@site.facebook}}" class="text-gray-500 hover:text-gray-900 dark:hover:text-white">
