<div class="mt-16 mb-16">
  <div class="container max-w-7xl mx-auto w-full pr-4 pl-4 mr-auto ml-auto">
    <h2 class="text-center mb-8 text-2xl font-bold">Popular Categories</h2>
    {{#get "tags" limit="8" include="count.posts" order="count.posts desc"}}
      <div class="flex justify-center flex-wrap gap-6">
        {{#foreach tags}}
          <a href="{{url}}" class="flex-1 m-2 min-w-[10rem] no-underline">
            <div
              class="p-3 dark:transparent dark:border-slate-800 rounded-lg border border-dotted relative overflow-hidden items-center flex hover-glow"
            >
              <div class="w-16 h-16 rounded-lg overflow-hidden z-[2]">
                {{#if feature_image}}
                  <img
                    src="{{feature_image}}"
                    alt="{{name}}"
                    class="object-cover w-full h-full rounded-lg block border-0"
                  />
                {{else}}
                  <img
                    src="default-image-url.jpg"
                    alt="Default Image"
                    class="object-cover w-full h-full rounded-lg block border-0"
                  />
                {{/if}}
              </div>
              <div class="text-center z-[2] ml-3">
                <div class="text-lg font-bold">{{name}}</div>
                <div class="text-xs mt-1">{{count.posts}} Posts</div>
              </div>
            </div>
          </a>
        {{/foreach}}
        <a href="/tags" class="flex-1 m-2 min-w-[10rem] no-underline">
          <div
            class="p-3 dark:bg-transparent dark:border-slate-800 rounded-lg border border-dotted relative overflow-hidden items-center flex hover-glow justify-center"
          >
            <div class="w-16 h-16 rounded-lg overflow-hidden z-[2]">
              {{#tag}}
                {{#if feature_image}}
                  <img
                    src="{{feature_image}}"
                    alt="{{name}}"
                    class="object-cover w-full h-full rounded-lg block border-0"
                  />
                {{else}}
                  <img
                    src="#"
                    alt="Default Image"
                    class="object-cover w-full h-full rounded-lg block border-0"
                  />
                {{/if}}
              {{/tag}}
            </div>
            <div class="text-center">
              <div class="text-lg font-bold">See All Categories</div>
            </div>
          </div>
        </a>
      </div>
    {{/get}}
  </div>
</div>
<style>
  .hover-flow:hover > .line {
    transform: scale(1);
    opacity: 0;
    transition: all 1s;
}

.hover-glow:hover > .line:nth-child(2), 
.hover-glow:hover > .line:nth-child(5) {
    transition-delay: 0.2s; /* Assuming a specific delay value since $delay1 is not provided */
}

.hover-glow:hover > .line:nth-child(3),
.hover-glow:hover > .line:nth-child(6) {
    transition-delay: 0.4s; /* Assuming a specific delay value since $delay2 is not provided */
}

.hover-glow:hover {
    background: rgba(255, 255, 255, 0.03);
}
</style>