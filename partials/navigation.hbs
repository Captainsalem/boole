<div class="flex justify-between items-center p-8">

  <div class="flex gap-8 items-center">
    {{#if @site.logo}}
      <a href="{{@site.url}}"><img src="{{@site.logo}}" alt="Blog Logo" /></a>

    {{else}}
      <div class="text-4xl font-serif">{{@site.title}}</div>

    {{/if}}
    <ul class="flex gap-5">
      {{#foreach navigation}}
        <li>
          <a href="{{url}}">{{label}}</a>
        </li>
      {{/foreach}}
    </ul>
  </div>

  <div class="flex gap-5 items-center">
    {{search}}
    {{> darkmode}}

    <h2><a href="/sign-in">Sign in</a></h2>

    <button type="button" class="py-2 px-6 bg-gradient-to-r from-primary-600 to-primary-950 rounded-full font-bold"><a href="/membership">Become member</a></button>
  </div>

</div>