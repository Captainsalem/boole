<div class="border-dotted flex flex-col overflow-hidden rounded-xl bg-white dark:bg-transparent border dark:border-slate-800 bg-clip-border text-gray-700 dark:text-gray-400 hover-glow">
        {{#if feature_image}}
        <a href="{{url}}" class="w-full overflow-hidden border-b border-dotted border-slate-800 z-0 rounded-t-lg transition-all duration-300 hover:scale-110">
            <img src="{{img_url feature_image size="xl"}}"
                alt="{{#if feature_image_alt}}{{feature_image_alt}}{{else}}{{title}}{{/if}}"
                class="w-full h-[200px] object-cover" />
        </a>
        {{/if}}
        <div class="flex flex-col justify-between flex-grow pl-8 pr-8 pt-2 pb-2">
            <div>
                <div class="flex flex-wrap mt-4">
            {{#primary_tag}}
            <a href="{{url}}"
              class="index-tag text-sm dark:text-slate-400 inline-flex relative card-excerpt z-[1] pr-4 pl-4 leading-6 h-7 border border-dotted border-slate-800 rounded-xl bg-transparent transition-all" {{#if accent_color}}style="--color-accent: {{accent_color}}; border-color: var(--color-accent);"{{/if}}>{{name}}</a>
              {{#if featured}}
                            <svg  xmlns="http://www.w3.org/2000/svg"  width="16px"  height="16px"  viewBox="0 0 24 24"  fill="none"  stroke="currentColor"  stroke-width="2"  stroke-linecap="round"  stroke-linejoin="round"  class="icon icon-tabler icons-tabler-outline icon-tabler-feather"><path stroke="none" d="M0 0h24v24H0z" fill="none"/><path d="M4 20l10 -10m0 -5v5h5m-9 -1v5h5m-9 -1v5h5m-5 -5l4 -4l4 -4" /><path d="M19 10c.638 -.636 1 -1.515 1 -2.486a3.515 3.515 0 0 0 -3.517 -3.514c-.97 0 -1.847 .367 -2.483 1m-3 13l4 -4l4 -4" /></svg>
                            {{/if}}
            {{/primary_tag}}
          </div>
                <h4
                    class="block text-2xl antialiased font-semibold leading-snug tracking-normal text-blue-gray-900 mt-4">
                    <a href="{{url}}">{{title}}</a>
                </h4>
                
                {{#if custom_excerpt}}
                <p class="block card-excerpt mt-3 text-sm antialiased leading-relaxed text-gray-700 dark:text-gray-400">
                    {{custom_excerpt}}
                </p>
                {{/if}}
            </div>
        </div>

        <hr class="mt-1 mb-0 border border-dotted dark:border-slate-800">
        <div class="flex items-center justify-between p-3">
            {{#if authors}}
            <div class="flex items-center -space-x-3">
                <a href="{{primary_author.url}}" title="{{primary_author.name}}" class="block">
                    <img src="{{img_url primary_author.profile_image}}" alt="avatar"
                        class="relative card-excerpt inline-block h-9 w-9 !rounded-full border border-white object-cover object-center hover:z-10">
                </a>
            </div>
            {{/if}}
            {{#if reading_time}}
            <div class="flex gap-1 items-center">
                <span>{{> "icons/clock"}}</span>
                <span class="text-sm card-excerpt">{{reading_time}}</span>
            </div>
            {{/if}}
            <time class="block text-sm antialiased font-normal leading-relaxed card-excerpt"
                datetime="{{date format='YYYY-MM-DD'}}">
                {{date format="MMMM DD, YYYY"}}
            </time>
            <div class="flex items-center">
                <a href="{{url}}">
                <span class="hover:animate-ping">{{> "icons/arrow-up-right"}}</span>
                </a>
            </div>
        </div>
    </div>

<style>
    .hover-flow:hover > .line {
  transform: scale(1);
  opacity: 0;
  transition: all 1s;
}

.hover-glow:hover > .line:nth-child(2), 
.hover-glow:hover > .line:nth-child(5) {
  transition-delay: 0.2s; /* Assuming a specific delay value since $delay1 is not provided */
}

.hover-glow:hover > .line:nth-child(3),
.hover-glow:hover > .line:nth-child(6) {
  transition-delay: 0.4s; /* Assuming a specific delay value since $delay2 is not provided */
}

.hover-glow:hover {
  background: rgba(255, 255, 255, 0.03);
}
</style>