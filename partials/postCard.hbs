<div class="border-dotted flex flex-col overflow-hidden rounded-xl bg-secondary-50 dark:bg-transparent border dark:border-secondary-800 bg-clip-border text-secondary-700 dark:text-secondary-400 hover-glow">
        {{#if feature_image}}
        <a href="{{url}}" class="w-full overflow-hidden border-b border-dotted border-slate-800 z-0 rounded-t-lg transition-all duration-300 hover:scale-110">
            <img src="{{img_url feature_image size="xl"}}"
                alt="{{#if feature_image_alt}}{{feature_image_alt}}{{else}}{{title}}{{/if}}"
                class="w-full h-[200px] object-cover" />
        </a>
        {{/if}}
        <div class="flex flex-col justify-between flex-grow pl-8 pr-8 pt-2 pb-2">
            <div>
            <div class="flex flex-wrap mt-4">
                {{#if featured}}
                {{#primary_tag}}
                <a href="{{url}}"
                    class="index-tag text-sm dark:text-secondary-400 inline-flex items-center relative card-excerpt z-[1] pr-4 pl-4 leading-6 h-7 border border-dotted border-secondary-800 rounded-lg bg-transparent transition-all"
                    {{#if
                    accent_color}}style="--color-accent: {{accent_color}}; border-color: var(--color-accent); color: var(--color-accent);"
                    {{/if}}>
                    {{name}}
                    <span
                        style="color: inherit; width: 18px; height: 18px; display: inline-flex; align-items: center; justify-content: center;"
                        class=" pl-1">
                        {{> "icons/fire"}}
                    </span>
                </a>
                {{/primary_tag}}
                {{/if}}
            </div>
                <h4
                    class="block text-2xl antialiased font-semibold leading-snug tracking-normal text-blue-gray-900 mt-4">
                    <a href="{{url}}">{{title}}</a>
                </h4>
                
                {{#if custom_excerpt}}
                <p class="block card-excerpt mt-3 text-sm antialiased leading-relaxed text-secondary-700 dark:text-secondary-400">
                    {{custom_excerpt}}
                </p>
                {{/if}}
            </div>
        </div>

        <hr class="mt-1 mb-0 border border-dotted dark:border-secondary-800">
        <div class="flex items-center justify-between p-3">
            {{#if authors}}
            <div class="flex items-center -space-x-3">
                <a href="{{primary_author.url}}" title="{{primary_author.name}}" class="block">
                    <img src="{{img_url primary_author.profile_image}}" alt="avatar"
                        class="relative card-excerpt inline-block h-9 w-9 !rounded-full border border-secondary-100 object-cover object-center hover:z-10">
                </a>
            </div>
            {{/if}}
            {{#if reading_time}}
            <div class="flex gap-1 items-center">
                <span>{{> "icons/clock"}}</span>
                <span class="text-sm card-excerpt">{{reading_time}}</span>
            </div>
            {{/if}}
            <time class="block text-sm antialiased font-normal leading-relaxed card-excerpt"
                datetime="{{date format='YYYY-MM-DD'}}">
                {{date format="MMMM DD, YYYY"}}
            </time>
            <div class="flex items-center">
                {{#if access}}
                {{else}}
                <span class="hover:animate-ping bg-primary-950/20 rounded-full p-1 text-white dark:text-secondary-400">{{> "icons/lock"}}</span>
                </a>
                {{/if}}
            </div>
        </div>
    </div>

<style>
    .hover-flow:hover > .line {
  transform: scale(1);
  opacity: 0;
  transition: all 1s;
}

.hover-glow:hover > .line:nth-child(2), 
.hover-glow:hover > .line:nth-child(5) {
  transition-delay: 0.2s; /* Assuming a specific delay value since $delay1 is not provided */
}

.hover-glow:hover > .line:nth-child(3),
.hover-glow:hover > .line:nth-child(6) {
  transition-delay: 0.4s; /* Assuming a specific delay value since $delay2 is not provided */
}

.hover-glow:hover {
  background: rgba(255, 255, 255, 0.03);
}
</style>