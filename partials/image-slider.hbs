<div id="default-carousel" class="relative w-full mx-auto max-w-7xl " data-carousel="slide">
  <!-- Carousel wrapper -->
  <div class="relative h-56 overflow-hidden rounded-lg md:h-96">
    {{#get "posts" filter="featured:true" limit="all" as |featured_posts|}}
    {{#foreach featured_posts}}
    <!-- Dynamic Carousel Item -->
    <div class="relative h-full" data-carousel-item>
      <a href="{{url}}">
        <img src="{{feature_image}}" class="absolute w-full h-full object-cover top-0 left-0" alt="{{title}}">
        <figcaption
          class="absolute inset-x-0 bottom-0 px-4 text-xl text-medium text-white dark:text-gray-300 bg-purple-900 bg-opacity-50 backdrop-filter backdrop-blur-md py-4">
          <p>{{title}}</p>
        </figcaption>
      </a>
    </div>
    {{/foreach}}
    {{/get}}
  </div>
  <!-- Slider indicators (Update dynamically) -->
  <div class="absolute z-30 flex -translate-x-1/2 bottom-5 left-1/2 space-x-3 rtl:space-x-reverse">
    {{#get "posts" filter="featured:true" limit="all" as |featured_posts|}}
    {{#foreach featured_posts}}
    <button type="button" class="w-3 h-3 rounded-full" aria-label="Slide {{@index}}"
      data-carousel-slide-to="{{@index}}"></button>
    {{/foreach}}
    {{/get}}
  </div>
</div>

