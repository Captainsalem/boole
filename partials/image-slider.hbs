{{#get "posts" include="tags,authors"}}
{{#foreach posts}}

    <div
      class=" slider-container relative flex flex-col bg-white border gap-5 shadow-sm rounded-xl overflow-hidden p-6 hover:shadow-lg transition dark:bg-slate-900 dark:border-gray-700 dark:shadow-slate-700/[.7]"
    >
    <div class="slider flex">
        {{! img }}
        {{#if feature_image}}
                <a href="{{url}}" class="mx-auto block w-full">
                    <figure class="slider w-full">
                         <img class="w-full h-[400px] rounded-lg object-cover inset-0" srcset="{{img_url feature_image size=" s"}} 300w, {{img_url
                            feature_image size="m" }} 600w, {{img_url feature_image size="l" }} 1000w, {{img_url
                            feature_image size="xl" }} 2000w" sizes="(max-width: 700px) 1400px, 92vw"
                            src="{{img_url feature_image size=" xl"}}"
                            alt="{{#if feature_image_alt}}{{feature_image_alt}}{{else}}{{title}}{{/if}}" />
                    </figure>
                </a>
        {{/if}}
</div>

<button class="prev absolute top-1/2 left-0 transform -translate-y-1/2 bg-gray-800 text-white px-3 py-1 rounded-l focus:outline-none" onclick="prevSlide()">&#10094;</button>
  <button class="next absolute top-1/2 right-0 transform -translate-y-1/2 bg-gray-800 text-white px-3 py-1 rounded-r focus:outline-none" onclick="nextSlide()">&#10095;</button>

    </div>

{{/foreach}}
{{/get}}

