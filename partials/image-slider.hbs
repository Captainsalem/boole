<h1
  class=" mt-24 mb-12 text-xl text-center font-extrabold leading-none tracking-tight text-secondary-900  dark:text-secondary-300">
  Featured Posts</h1>


<div class="grid grid-cols-12 gap-4 mx-auto max-w-7xl">
  <!-- start main featured section -->
  <div
    class="col-span-full lg:col-span-7 hero-big p-6 rounded-lg border shadow-sm flex-col hero-big bg-transparent border-dotted border-secondary-300 dark:border-secondary-800 hover-glow">
    {{#get "posts" limit="1" include="tags,authors"}}
    {{#foreach posts}}
    <article class="hero-big rounded-lg flex-col hero-big bg-transparent ">
      <a href="{{url}}" class="block w-full mb-4">
        <img src="{{feature_image}}" alt="{{title}}" class="rounded-lg object-cover w-full">
      </a>
      <div class="flex flex-wrap mt-4">
        {{#if featured}}
        {{#primary_tag}}
        <a href="{{url}}"
          class="index-tag text-sm dark:text-secondary-400 inline-flex items-center relative card-excerpt z-[1] pr-4 pl-4 leading-6 h-7 border border-dotted border-secondary-800 rounded-lg bg-transparent transition-all"
          {{#if
          accent_color}}style="--color-accent: {{accent_color}}; border-color: var(--color-accent); color: var(--color-accent);"
          {{/if}}>
          {{name}}
          <span
            style="color: inherit; width: 18px; height: 18px; display: inline-flex; align-items: center; justify-content: center;"
            class=" pl-1">
            {{> "icons/fire"}}
          </span>
        </a>
        {{/primary_tag}}
        {{/if}}
      </div>
      <h2 class="text-2xl font-bold mb-4 dark:text-secondary-400 leading-5 mt-4"><a href="{{url}}">{{title}}</a></h2>
      <div class=" text-base flex-1 dark:text-secondary-400 mb-6 h-auto overflow-hidden leading-6 card-excerpt">
        {{excerpt}}
      </div>
      <div class="flex flex-wrap">
        <div class="mr-6 flex flex-wrap">
          {{#if authors}}
          {{#foreach authors}}
          <a href="{{url}}" class="z-[9] block w-10 h-10 rounded-full -mr-3 p-1">
            <img src="{{profile_image}}" alt="{{name}}" class="rounded-full">
          </a>
          {{/foreach}}
          {{/if}}
        </div>
        <span class="inline-flex items-center leading-6">
          {{> "icons/clock"}}
          <span class="ml-1 dark:text-secondary-400 text-sm card-excerpt">{{reading_time}}</span>
        </span>
      </div>
    </article>
    {{/foreach}}
    {{/get}}
  </div>
  <!-- end main featured section -->

  <!-- start secondary posts section -->
  <div class="col-span-full lg:col-span-5 grid grid-cols-1 sm:grid-cols-2 gap-4">
    {{#get "posts" filter="featured:true" limit="4" include="tags" order="published_at desc" as |featuredPosts|}}
    {{#foreach featuredPosts}}
    <article
      class="flex flex-col bg-transparent dark:bg-transprent border border-dotted border-secondary-300 dark:border-secondary-800 flex-wrap rounded-lg p-4 hover-glow">
      <a href="{{url}}" class="block w-full mb-4 flex-shrink-0">
        <img src="{{feature_image}}" alt="{{title}}" class="rounded-lg object-cover w-full h-48">
      </a>
      <div class="flex flex-wrap mt-4">
        {{#if featured}}
        {{#primary_tag}}
        <a href="{{url}}"
          class="index-tag text-sm dark:text-secondary-400 inline-flex items-center relative card-excerpt z-[1] pr-4 pl-4 leading-6 h-7 border border-dotted border-secondary-800 rounded-lg bg-transparent transition-all"
          {{#if
          accent_color}}style="--color-accent: {{accent_color}}; border-color: var(--color-accent); color: var(--color-accent);"
          {{/if}}>
          {{name}}
          <span
            style="color: inherit; width: 18px; height: 18px; display: inline-flex; align-items: center; justify-content: center;"
            class=" pl-1">
            {{> "icons/fire"}}
          </span>
        </a>
        {{/primary_tag}}
        {{/if}}
      </div>
      <h2 class="text-lg leading-6 font-bold mb-4 text-secondary-800 hover:text-secondary-600 dark:text-secondary-400 mt-4"><a
          href="{{url}}">{{title}}</a></h2>
      <div class="dark:text-slate-400 text-xs h-auto overflow-hidden leading-5 card-excerpt">{{excerpt}}</div>
    </article>
    {{/foreach}}
    {{/get}}
  </div>
  <!-- end secondary posts section -->
</div>