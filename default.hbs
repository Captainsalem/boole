<html lang="{{@site.locale}} class="dark" >
  <head>

    {{! Document Settings }}
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />

    {{! Base Meta }}
    <title>{{meta_title}}</title>
    <meta name="HandheldFriendly" content="True" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    {{! Built stylesheet }}
    <link
      rel="stylesheet"
      type="text/css"
      href="{{asset 'build/styles.css'}}"
    />

    {{! This tag outputs SEO meta+structured data and other important settings }}
    {{ghost_head}}
    {{!-- This tag outputs scripts as saved in "code injection" scripts. --}}
    {{ghost_foot}}
  </head>
<body class="bg-white dark:bg-gray-900 text-gray-900 dark:text-gray-200 transition-colors duration-500 max-w-[1400px] mx-auto text-lg"></body>
    {{> navbar}}
    {{> blur }}
    {{{body}}}
    {{> footer}}
  </body>
</html>