<html lang="{{@site.locale}} class="dark" >
  <head>

    {{! Document Settings }}
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />

    {{! Base Meta }}
    <title>{{meta_title}}</title>
    <meta name="HandheldFriendly" content="True" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    {{! Built stylesheet }}
    <link
      rel="stylesheet"
      type="text/css"
      href="{{asset 'build/styles.css'}}"
    />

    {{! This tag outputs SEO meta+structured data and other important settings }}
    {{ghost_head}}

  </head>
  <body  {{#match @custom.color_scheme "Dark"}} class="bg-secondary-950 text-secondary-100 max-w-[1400px] mx-auto text-lg" {{else}} class="bg-slate-700 text-lg max-w-[1400px] mx-auto"{{/match}}>

    {{> navbar}}
    {{{body}}}
    {{> footer}}
    {{ghost_foot}}
  </body>
</html>