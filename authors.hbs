{{!< default }}

<section class="max-w-7xl mx-auto">
    <h1 class="m-20 text-5xl font-extrabold text-secondary-900 dark:text-secondary-100 lg:text-6xl text-center">
        <span class="text-transparent bg-clip-text bg-gradient-to-r from-primary-500 via-primary-600 to-primary-300">{{t "Authors"}}
    </h1>
<div class="mx-auto grid justify-center  gap-4 sm:grid-cols-2 md:grid-cols-3 card-excerpt">
    {{#get "authors" limit="all" include="count.posts"}}
        {{#foreach authors}}   
                <div class="rounded-2xl hover-glow overflow-hidden border border-dotted border-secondary-400 dark:border-secondary-800 shadow-sm bg-transparenthover:shadow-xl dark:bg-inherit p-6 text-center text-sm">
                    <a href="{{url}}" class="block w-24 h-24 rounded-full mx-auto overflow-hidden">
                        <img class="object-cover object-center w-full h-full" src="{{profile_image}}" loading="lazy" alt="{{name}}">
                    </a>
                    <h2 class="text-xl font-bold my-4 capitalize">
                        <a href="{{url}}">{{name}}</a>
                    </h2>
                    <div class="text-secondary-600">{{count.posts}} posts</div>
                    <p class="dark:text-secondary-400 mt-4 text-base">{{bio}}</p>
                </div>
        {{/foreach}}
    {{/get}}
</div>
</section>

<style>
    .hover-flow:hover > .line {
  transform: scale(1);
  opacity: 0;
  transition: all 1s;
}

.hover-glow:hover > .line:nth-child(2), 
.hover-glow:hover > .line:nth-child(5) {
  transition-delay: 0.2s; /* Assuming a specific delay value since $delay1 is not provided */
}

.hover-glow:hover > .line:nth-child(3),
.hover-glow:hover > .line:nth-child(6) {
  transition-delay: 0.4s; /* Assuming a specific delay value since $delay2 is not provided */
}

.hover-glow:hover {
  background: rgba(255, 255, 255, 0.03);
}
</style>

