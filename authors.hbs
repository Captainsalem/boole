{{!< default }}
<h1 class="mb-4 text-3xl font-extrabold text-gray-900 dark:text-white md:text-5xl lg:text-6xl text-center"><span class="text-transparent bg-clip-text bg-gradient-to-r from-purple-500 via-violet-600 to-blue-600">{{t "Authors"}}</h1>
<div class="row">
    <div class="flex flex-wrap -mx-4" >
    {{#get "authors" limit="all" include="count.posts"}}
        {{#foreach authors}}
            <div class="w-full sm:w-1/2 md:w-1/4 px-4 mb-8">
                <div class="rounded-2xl overflow-hidden border dark:border-gray-800 hover:shadow-xl bg-white dark:bg-inherit p-6 text-center text-sm">
                    <a href="{{url}}" class="block w-24 h-24 rounded-full mx-auto overflow-hidden">
                        <img class="object-cover object-center w-full h-full" src="{{profile_image}}" loading="lazy" alt="{{name}}">
                    </a>
                    <h2 class="text-xl font-bold my-4"><a href="{{url}}">{{name}}</a></h2>
                    <div class="text-gray-600">{{count.posts}} posts</div>
                    <p class="dar:text-gray-400 mt-4">{{bio}}</p>
                </div>
            </div>
        {{/foreach}}
    {{/get}}
</div>
</div>
