{{!< default }}

<section class="max-w-7xl">
    <h1 class="m-20 text-5xl font-extrabold text-gray-900 dark:text-white lg:text-6xl text-center">
        <span class="text-transparent bg-clip-text bg-gradient-to-r from-purple-500 via-violet-600 to-blue-600">{{t "Authors"}}
    </h1>
<div class="mx-auto grid justify-center  gap-4 sm:grid-cols-2 md:grid-cols-3">
    {{#get "authors" limit="all" include="count.posts"}}
        {{#foreach authors}}   
                <div class="rounded-2xl overflow-hidden border-2 shadow-sm bg-transparent dark:border-gray-800 hover:shadow-xl dark:bg-inherit p-6 text-center text-sm">
                    <a href="{{url}}" class="block w-24 h-24 rounded-full mx-auto overflow-hidden">
                        <img class="object-cover object-center w-full h-full" src="{{profile_image}}" loading="lazy" alt="{{name}}">
                    </a>
                    <h2 class="text-xl font-bold my-4">
                        <a href="{{url}}">{{name}}</a>
                    </h2>
                    <div class="text-gray-600">{{count.posts}} posts</div>
                    <p class="dark:text-gray-400 mt-4 text-base">{{bio}}</p>
                </div>
        {{/foreach}}
    {{/get}}
</div>
</section>






