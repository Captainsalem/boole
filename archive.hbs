{{!< default }}
{{! archive entries }}
<div class="flex justify-center mx-auto items-center max-w-7xl">
  <div class="px-4 container mx-auto max-w-3xl pr-4 pl-4 ml-auto mr-auto mt-32">
    <h1 class="text-4xl text-center font-semibold mb-8">Archive</h1>
    {{#get "posts"}}
      <p class="text-lg text-center mb-12">Browse the complete archive of
        {{pagination.total}}
        posts.</p>
    {{/get}}
    <div class="h2 font-bold mb-4">{{date format="YYYY"}}</div>
    <div
      class="mt-2 mb-2 border-x border-t rounded-lg border-secondary-300 dark:border-secondary-700"
    >
      {{#foreach posts visibility="all"}}
        <div class="year-section">
          <div class="mt-1 mb-1">
            <article class="flex justify-start items-center p-4">
              <time
                datetime="{{date published_at format="YYYY-MM-DD"}}"
                class="text-secondary-600 dark:text-secondary-400 bg-secondary-300 dark:bg-secondary-800 rounded-lg p-2"
              >
                {{date published_at format="DD MMM YYYY"}}
              </time>
              <h2 class="text-lg text-medium font-normal ml-4 mt-4">
                <a
                  href="{{url}}"
                  class="text-secondary-600 hover:text-secondary-800 dark:text-secondary-400 hover:underline transition duration-300"
                >{{title}}</a>
              </h2>
            </article>
            <hr class="h-px mt-1 mb-1 bg-secondary-200 border-0 dark:bg-secondary-700" />
          </div>
        </div>
      {{/foreach}}
    </div>

    <div class="flex flex-col items-center">
      <div class="inline-flex mt-2 xs:mt-0">
        {{#if prev}}
          <a
            href="{{page_url prev}}"
            class="flex items-center justify-center px-3 h-8 text-sm font-medium text-secondary-100 bg-secondary-800 rounded-s hover:bg-secondary-900 dark:bg-secondary-800 dark:border-secondary-700 dark:text-secondary-400 dark:hover:bg-gray-700 dark:hover:text-secondary-100"
          >
            &larr; Prev
          </a>
        {{/if}}
        {{#if next}}
          <a
            href="{{page_url next}}"
            class="flex items-center justify-center px-3 h-8 text-sm font-medium text-secondary-100 bg-secondary-800 border-0 border-s border-secondary-700 rounded-e hover:bg-secondary-900 dark:bg-secondary-800 dark:border-secondary-700 dark:text-secondary-400 dark:hover:bg-secondary-700 dark:hover:text-secondary-100"
          >
            Next &rarr;
          </a>
        {{/if}}
      </div>
    </div>
  </div>
</div>