{{!< default }}
<h1 class="mb-4 text-3xl font-extrabold text-gray-900 dark:text-white md:text-5xl lg:text-6xl text-center"><span class="text-transparent bg-clip-text bg-gradient-to-r from-purple-500 via-violet-600 to-blue-600">{{t "Tags"}}</h1>
<div class="flex flex-wrap -m-4">
  {{#get "tags" include="count.posts" order="count.posts desc" limit="60"}}
    {{#foreach tags}}
      <div class="p-4 md:w-1/4">
        <a
          class="flex flex-col bg-white border shadow-sm rounded-xl overflow-hidden hover:shadow-lg transition dark:bg-slate-900 dark:border-gray-700 dark:shadow-slate-700/[.7]"
          href="/tag/{{slug}}"
        >
          <div class="relative mt-2">
            <img
              class="w-full h-48 object-cover object-center"
              src="{{feature_image}}"
              alt="{{name}}"
            />
            <div class="absolute inset-0 bg-black opacity-10"></div>
          </div>
          <div class="p-4 md:p-5 flex flex-col items-center">
            <h3
              class="text-lg font-bold text-gray-800 dark:text-white"
            >{{name}}</h3>
            <p class="mt-1 text-gray-500 dark:text-gray-400">{{count.posts}}
              posts</p>
          </div>
        </a>
      </div>
    {{/foreach}}
  {{/get}}
</div>
<style>
  .relative { position: relative; } .absolute { position: absolute; }
  .opacity-10 { opacity: 0.10; } .object-cover { object-fit: cover; }
  .object-center { object-position: center; } .h-48 { height: 12rem; }
  .overflow-hidden { overflow: hidden; }
</style>