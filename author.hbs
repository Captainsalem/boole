{{!< default}}
<div class="relative isolate px-6 pt-14 lg:px-8">
  <div class="mx-auto max-w-2xl py-32 sm:py-48 lg:py-2">
    <div class="hidden sm:mb-8 sm:flex sm:justify-center w-48 h-48 mx-auto">
      <img
        class="rounded-full border-4 border-purple-500"
        src="{{author.profile_image}}"
        alt="{{author.name}}"
      />
    </div>
    <div class="text-center">
      <h1
        class="text-4xl capitalize font-bold tracking-tight text-gray-900 dark:text-gray-400 sm:text-6xl">{{author.name}}</h1>
      <div class="mt-10 flex items-center justify-center gap-x-6">
            {{#if author.website}}
                <a class="" href="{{author.website}}" target="_blank" rel="noopener" aria-label="Website" title="Website">{{>"icons/website"}}</a>
            {{/if}}
            {{#if author.twitter}}
                <a class="" href="https://twitter.com/{{author.twitter}}" target="_blank" rel="noopener" aria-label="Twitter" title="Twitter">{{> "icons/twitter"}}</a>
            {{/if}}
            {{#if author.facebook}}
                <a class="" href="https://www.facebook.com/{{author.facebook}}" target="_blank" rel="noopener" aria-label="Facebook" title="Facebook">{{> "icons/facebook"}}</a>
            {{/if}}
      </div>
      <p class="mt-8 text-lg leading-8 text-gray-600 dark:text-gray-400">{{author.bio}}</p>
    </div>
  </div>
</div>
