{{!< default}} {{#author}} <div class="mx-auto max-w-2xl py-20">
  <div class="flex justify-center items-center">
    <figure>
      <img src="{{profile_image}}" alt="{{name}}"
        class="w-48 h-48 rounded-full mx-auto transition-all duration-500 object-cover border-2 border-purple-500 group-hover:border-indigo-600" />
    </figure>
  </div>

  <div class="text-center py-5 card-excerpt">
    <h1 class="text-4xl capitalize font-bold tracking-tight text-gray-900 dark:text-gray-100">{{name}}</h1>
    <div class="mt-8 flex items-center justify-center gap-x-6">
      {{#if website}}
      <a href="{{website}}" target="_blank" rel="noopener" aria-label="Website" title="Website">{{>"icons/website"}}</a>
      {{/if}}
      {{#if twitter}}
      <a href="https://twitter.com/{{twitter}}" target="_blank" rel="noopener" aria-label="Twitter" title="Twitter">{{>
        "icons/twitter"}}</a>
      {{/if}}
      {{#if facebook}}
      <a href="https://www.facebook.com/{{facebook}}" target="_blank" rel="noopener" aria-label="Facebook"
        title="Facebook">{{> "icons/facebook"}}</a>
      {{/if}}
      {{#if location}}
      <div>{{location}}</div>
      {{/if}}
    </div>
    <div class="inline-flex items-center justify-center w-full">
      <hr class="w-64 h-px my-8 bg-slate-400 border-0 dark:bg-slate-800">
      <span
        class="absolute px-3 font-medium text-gray-900 -translate-x-1/2 bg-white left-1/2 dark:text-white dark:bg-gray-900">{{plural ../pagination.total empty='No posts' singular='% post' plural='% posts'}}</span>
    </div>
    <p class="mt-8 text-base leading-6 text-gray-600 dark:text-gray-400">{{bio}}</p>
  </div>
  </div>
  {{/author}}
  <div>
    {{> postCard}}
    {{pagination}}
  </div>
