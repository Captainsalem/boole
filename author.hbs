{{!< default}}
{{#author }}

  <div class="mx-auto max-w-2xl py-20">


      <div class="flex justify-center items-center">
        <figure>
          <img
            class="rounded-full object-cover w-48 h-48 border-8 border-purple-500"
            src="{{profile_image}}"
            alt="{{name}}"
          />
        </figure>
      </div>
    


    <div class="text-center py-5">
      <h1
        class="text-4xl capitalize font-bold tracking-tight text-gray-900 dark:text-gray-100">
        {{name}}
      </h1>
      <div class="mt-8 flex items-center justify-center gap-x-6">
            {{#if website}}
                <a class="" href="{{website}}" target="_blank" rel="noopener" aria-label="Website" title="Website">{{>"icons/website"}}</a>
            {{/if}}
            {{#if twitter}}
                <a class="" href="https://twitter.com/{{twitter}}" target="_blank" rel="noopener" aria-label="Twitter" title="Twitter">{{> "icons/twitter"}}</a>
            {{/if}}
            {{#if facebook}}
                <a class="" href="https://www.facebook.com/{{facebook}}" target="_blank" rel="noopener" aria-label="Facebook" title="Facebook">{{> "icons/facebook"}}</a>
            {{/if}}
            {{#if location}}
                  <div class="">{{location}}</div>
            {{/if}}
      </div>
      <p class="mt-8 text-lg leading-8 text-gray-600 dark:text-gray-400">{{bio}}</p>
    </div>


  </div>

