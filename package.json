{
  "name": "porto",
  "version": "0.0.1",
  "author": {
    "name": "J4y J3ff",
    "email": "gaspergvj@gmail.com"
  },
  "keywords": [
    "ghost-theme"
  ],
  "engines": {
    "ghost": ">=5.0.0",
    "ghost-api": "v3"
  },
  "scripts": {
    "restart": "nodemon default.hbs",
    "start": "npx tailwindcss -i ./assets/css/globals.css -o ./assets/build/styles.css --watch",
    "dev": "gulp",
    "build": "gulp build",
    "zip": "gulp zip",
    "gscan": "gscan ."
  },
  "devDependencies": {
    "autoprefixer": "^10.4.19",
    "gscan": "^3.5.1",
    "gulp": "^4.0.2",
    "gulp-livereload": "^4.0.2",
    "gulp-zip": "^5.0.1",
    "postcss": "^8.4.38",
    "pump": "^3.0.0",
    "tailwindcss": "^3.4.3"
  },
  "config": {
    "posts_per_page": 5,
    "custom": {
      "color_scheme": {
        "type": "select",
        "options": [
          "Light",
          "Dark",
          "Auto"
        ],
        "default": "Light"
      }
    }
  },
  "dependencies": {
    "nodemon": "^3.1.0"
  }
}
